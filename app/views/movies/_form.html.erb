<%= render "layouts/errors", :object => @movie %>

<%= form_for @movie do |f| %>
    
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :summary %>
    <%= f.text_field :summary %>
    <%= f.label :rating %>
    <%= f.text_field :rating %>
    <%= f.label :genre %>
    <%= f.text_field :genre %>
    <%= f.label :director %>
    <%= f.text_field :director %>
    <%= f.label :writer %>
    <%= f.text_field :writer %>
    <%= f.label :released %>
    <%= f.date_select :released %>  
    <%= f.label :runtime %>
    <%= f.text_field :runtime %>  
    <%= f.label :studio %>
    <%= f.text_field :studio %>  

    <%= f.submit %>

<% end %>