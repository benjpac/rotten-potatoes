<%= render "layouts/errors", :object => @review %>

<%= form_for [@movie, @review] do |f| %>
    
    <%= f.label :author %>
    <%= f.text_field :author %>
    <%= f.label :rating %>
    <%= f.text_field :rating %>
    <%= f.label :summary %> 
    <%= f.text_field :summary %> 

    <%= f.submit %>
<% end %>